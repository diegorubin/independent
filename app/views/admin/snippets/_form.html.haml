.row
  = semantic_form_for([:admin, @snippet], html: {id: 'snippet'}) do |f|

    .span8
      .widget
        .widget-content
          = f.inputs :title, :language, :slug
          = f.input :code, as: 'text'

    .span4
      .widget
        .widget-content
          .well
            = f.action :submit, :button_html => { :class => "btn btn-primary", :disable_with => '...' }
            = f.action :reset, :button_html => { :class => "btn btn-danger", :disable_with => '...' }
            = f.action :cancel, :button_html => { :class => "btn btn-danger", :disable_with => '...' }

            = f.input :public,   :as => :radio,  :collection => [['Sim',true], ['NÃ£o', false]]

