.btn-toolbar{role: "toolbar"}

  - unless in_action?('new')
    .btn-group
      = menu_button(:new.t(:scope => [:admin, :presentations, :menu]), new_admin_presentation_path, 'btn-primary')

  - unless in_action?('index')
    .btn-group
      = menu_button(:list.t(:scope => [:admin, :presentations, :menu]), admin_presentations_path, 'btn-default')

  - if in_action?('edit')
    .btn-group
      = menu_button(:destroy.t(:scope => [:admin, :presentations, :menu]), admin_presentation_path(params[:id]), 'btn-danger', {method: 'delete', data:{confirm: :confirm.t(:scope => [:admin, :presentations, :destroy])}})



