= content_for :title, :title.t(:scope => [:admin, :widgets, :index])

%h1= :h1.t(:scope => [:admin, :widgets, :index])

= render 'menu'

%table.table.table-striped
  %thead
    %tr
      %td
        = :title.t(:scope => [:mongoid, :attributes, :widget])
      %td
        &nbsp;

  %tbody
    - @widgets.each do |widget|
      %tr
        %td
          = widget.title
        %td
          .btn-group
            = menu_button(:show.t(:scope => [:admin, :widgets, :menu]), admin_widget_path(widget), 'btn-default')

= paginate @widgets

