!!!
%html{:lang => "pt-BR"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => get_setting_value('global.meta_description'), :name => "description"}/
    %meta{:content => get_setting_value('global.meta_author'), :name => "author"}/
    %title
      #{yield(:title)} | #{get_setting_value('global.blog_title')}
    = stylesheet_link_tag 'application', media: 'all'
    = stylesheet_link_tag 'default', media: 'all'
    = csrf_meta_tags
  %body
    .brand= get_setting_value('theme.title')
    .address-bar= get_setting_value('theme.subtitle')
    %nav.navbar.navbar-default{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "index.html"} Business Casual

        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "index.html"} Home
            %li
              %a{:href => "about.html"} About
            %li
              %a{:href => "blog.html"} Blog
            %li
              %a{:href => "contact.html"} Contact
        / /.navbar-collapse
      / /.container
    .container
      .row
        .box
          .col-lg-12.text-center
            = yield

    %footer
      .container
        .row
          .col-lg-12.text-center
            %p Copyright &copy; Company 2013

    = javascript_include_tag 'application'
    = javascript_include_tag 'default'

